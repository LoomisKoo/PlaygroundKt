<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.playgroundkt">
    <!-- 悬浮窗权限 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.SYSTEM_OVERLAY_WINDOW" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:excludeFromRecents="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PlaygroundKt">
        <activity android:name=".activity.other.ThreadLocalActivity"></activity>
        <activity android:name=".activity.other.RvBigImgActivity" />
        <activity android:name=".activity.other.EventDispatchActivity" />
        <activity android:name=".activity.other.ScrollConflictActivity" />
        <activity android:name=".activity.other.ZoomImageViewActivity" />
        <activity android:name=".ShortcutsActivity" />
        <activity android:name=".activity.jetpack.RoomActivity" />
        <activity android:name=".activity.jetpack.resultAPI.ResultFirstActivity" />
        <activity android:name=".activity.jetpack.resultAPI.ResultSecondActivity" />
        <activity android:name=".activity.other.SharePreferenceANRActivity" />
        <activity android:name=".activity.kotlin.FlowActivity" />
        <activity android:name=".activity.kotlin.KotlinActivity" />
        <activity android:name=".activity.kotlin.coroutine.AsyncActivity" />
        <activity android:name=".activity.other.FloatWindowsActivity" />
        <activity android:name=".activity.kotlin.coroutine.LaunchTypeActivity" />
        <activity android:name=".activity.other.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- 添加支持shortcuts  必须添加在启动的activity -->
            <!-- <meta-data -->
            <!-- android:name="android.app.shortcuts" -->
            <!-- android:resource="@xml/shortcuts" /> -->
        </activity>
    </application>

</manifest>